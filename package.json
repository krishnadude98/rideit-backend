{
  "name": "devslopes-api-course",
  "version": "0.0.1",
  "description": "Devslopes RESTful API Course API Project",
  "main": "dist",
  "scripts": {
    "dev": "NODE_ENV=development nodemon -w src --exec \"babel-node src --presets es2015,stage-0\"",
    "build": "babel src -s -D -d dist --presets es2015,stage-0",
    "start": "pm2 start dist --interpreter ./node_modules/babel-cli/bin/babel-node.js",
   
    "lint": "eslint src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krishnadude98/rideit-backend.git"
  },
  "author": "Hari Krishna <krishnadude98@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-polyfill": "^6.0.16",
    "eslint": "^3.9.1",
    "nodemon": "^1.11.0"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "express-jwt": "^6.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^4.13.21",
    "path": "^0.12.7"
  },
  "keywords": [
    "express",
    "es6",
    "rest",
    "api"
  ]
}
